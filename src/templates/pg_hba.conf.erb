# TYPE  DATABASE        USER            ADDRESS                 METHOD
# "local" is for Unix domain socket connections only
local   all             all                                     trust

# IPv4 local connections:
host    all             all             127.0.0.1/32            trust
<% users.each do |user| %>
host    all    <%= user[:username] %>    192.168.0.0/16     md5
host    all    <%= user[:username] %>    172.16.0.0/12      md5
host    all    <%= user[:username] %>    10.0.0.0/8         md5
<% end%>

# Allow replication connections from localhost, by a user with the
# replication privilege.
local   replication     gomicro                                trust
host    replication     gomicro        192.168.0.0/16          trust
host    replication     gomicro        172.16.0.0/12           trust
host    replication     gomicro        10.0.0.0/8              trust
